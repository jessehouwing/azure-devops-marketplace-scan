{
  "$schema": "https://raw.githubusercontent.com/microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
  "id": "ac8bd349-0086-4208-82a1-93d3c61bb077",
  "name": "GitHubAppRestRequest",
  "friendlyName": "REST Request (GitHub App)",
  "description": "Make a HTTP request as a GitHub App (bot).",
  "helpUrl": "https://docs.github.com/en/rest/issues/comments#rest-request",
  "author": "tdashworth",
  "category": "Utility",
  "visibility": [
    "Build",
    "Release"
  ],
  "demands": [],
  "version": {
    "Major": 0,
    "Minor": 0,
    "Patch": 6
  },
  "minimumAgentVersion": "1.95.0",
  "instanceNameFormat": "GitHub App: REST Request",
  "inputs": [
    {
      "name": "privateKey",
      "type": "secureFile",
      "label": "Private Key File",
      "required": true,
      "helpMarkDown": "The GitHub App private key to act as."
    },
    {
      "name": "appId",
      "type": "int",
      "label": "App Id",
      "required": true,
      "helpMarkDown": "The GitHub App id to act as."
    },
    {
      "name": "installationIdentifier",
      "type": "pickList",
      "options": {
        "repo": "Repo owner and name`",
        "installationId": "Installation ID"
      },
      "label": "Installation Identifier",
      "defaultValue": "repo",
      "required": true,
      "helpMarkDown": "The method in which to find an installation to use."
    },
    {
      "name": "repo",
      "type": "string",
      "label": "Repository",
      "defaultValue": "$(Build.Repository.Name)",
      "visibleRule": "installationIdentifier = repo",
      "required": true,
      "helpMarkDown": "The repository name. The app must be installed against that repository."
    },
    {
      "name": "installationId",
      "type": "int",
      "label": "Installation ID",
      "visibleRule": "installationIdentifier = installationId",
      "required": true,
      "helpMarkDown": "The ID of the installation to use."
    },
    {
      "name": "httpMethod",
      "type": "pickList",
      "options": {
        "GET": "GET",
        "POST": "POST",
        "PATCH": "PATCH",
        "PUT": "PUT",
        "DELETE": "DELETE"
      },
      "label": "HTTP Method",
      "defaultValue": "GET",
      "required": true,
      "helpMarkDown": "The HTTP method."
    },
    {
      "name": "url",
      "type": "string",
      "label": "URL",
      "required": true,
      "helpMarkDown": "The url to request."
    },
    {
      "name": "httpHeaders",
      "type": "multiLine",
      "label": "HTTP Headers",
      "required": false,
      "helpMarkDown": "HTTP headers as JSON object."
    },
    {
      "name": "body",
      "type": "multiLine",
      "label": "Body",
      "required": false,
      "helpMarkDown": "The body as a JSON object."
    }
  ],
  "execution": {
    "Node10": {
      "target": "index.js"
    }
  }
}