{
    "manifestVersion": 1,
    "scopes": [
        "vso.code_full",
        "vso.work_write"
    ],
    "repository": {
        "type": "git",
        "uri": "https://github.com/avih75/AzureDevopsHrefControl"
    },
    "contributions": [
        {
            "id": "Href_Link",
            "description": "Show links to files with an href",
            "type": "ms.vss-work-web.work-item-form-control",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "Image Field",
                "uri": "hrefIndex.html",
                "inputs": [
                    {
                        "id": "linkValue",
                        "name": "Link to the image",
                        "description": "This field get the links uri",
                        "type": "WorkItemField",
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id": "requireCall",
                        "name": "Source of the Image",
                        "description": "This field get the blob type name (for now can work only with WINS)",
                        "type": "AreaText",
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    },
                    {
                        "id": "blobUrl",
                        "name": "URL to the Blob",
                        "description": "This field get the blob URL",
                        "type": "AreaText",
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    },
                    {
                        "id": "userPassword",
                        "name": "user name and password",
                        "description": "This field get the user name and the password seperated by ',' ",
                        "type": "AreaText",
                        "validation": {
                            "dataType": "String",
                            "isRequired": false
                        }
                    }
                ]
            }
        }
    ],
    "contributionTypes": []
}