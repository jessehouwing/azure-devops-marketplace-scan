        {
            "name": "dropFolderPath",
            "type": "string",
            "label": "The drop folder path",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Path to reach nuspec file"
        },
        {
            "name": "nuspecFileName",
            "type": "string",
            "label": "Name of the nuspec to package",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "choco pack <nuspecFileName>"
