{
  "$schema": "https://raw.githubusercontent.com/AArnott/vso-agent-tasks/9b41d803a/tasks.schema.json",  
  "id": "BC53E12D-DC5E-4444-8527-283E96F5205E",
  "name": "TesteinUploadStep",
  "friendlyName": "Upload Testein Custom Step",
  "description": "Uploads your custom test step to testein",
  "author": "Testein",
  "helpMarkDown": "Uploads your custom test steps from VSTS",
  "category": "Test",
  "visibility": [
    "Build",
    "Release"
  ],
  "demands": [],
  "version": {
    "Major": 0,
    "Minor": 2,
    "Patch": 2
  },
  "minimumAgentVersion": "1.95.0",
  "instanceNameFormat": "Run Testein test",
  "inputs": [
    {
      "name": "email",
      "type": "string",
      "label": "Email",
      "required": true,
      "helpMarkDown": "Your email"
    },
    {
      "name": "userToken",
      "type": "string",
      "label": "User Token",
      "required": true,
      "helpMarkDown": "Your user token. Could be found under your user settings in Testein"
    },
    {
        "name": "type",
        "type": "pickList",
        "label": "Step type",
        "defaultValue": "",
        "options": {
            "": "Select step type (JavaScript or Java)",
            "JavaScript": "JavaScript",
            "Java": "Java"
        },
        "required": true,
        "helpMarkDown": "Type of the test step (JavaScript or Java)"
    },
    {
        "name": "jsFilePath",
        "type": "filePath",
        "label": "JS file Path",
        "defaultValue": "",
        "required": true,
        "helpMarkDown": "Path to js script file",
        "visibleRule": "type == JavaScript"
    },
    {
        "name": "jsonFilePath",
        "type": "filePath",
        "label": "JSON file Path",
        "defaultValue": "",
        "required": true,
        "helpMarkDown": "Path to json descriptor file",
        "visibleRule": "type == JavaScript"
    },
    {
        "name": "jarFilePath",
        "type": "filePath",
        "label": "JAR file Path",
        "defaultValue": "",
        "required": true,
        "helpMarkDown": "Path to jar file",
        "visibleRule": "type == Java"
    },
    {
      "name": "overwrite",
      "type": "boolean",
      "label": "Overwrite",
      "defaultValue": "false",
      "required": false,
      "helpMarkDown": "If true, existing step will be overwritten"
    }
  ],
  "execution": {
    "Node": {
      "target": "index.js",
      "argumentFormat": ""
    }
  }
}