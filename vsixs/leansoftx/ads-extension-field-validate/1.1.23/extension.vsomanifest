{
    "manifestVersion": 1,
    "scopes": [
        "vso.work_full"
    ],
    "demands": [
        "api-version/3.0"
    ],
    "contributions": [
        {
            "id": "unique-field-control",
            "type": "ms.vss-work-web.work-item-form-control",
            "description": "with this work item custom control, you can validate the uniqueness of work item field value before saving",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "Unique Field Control",
                "uri": "dist/uniqueField/index.html",
                "height": 50,
                "inputs": [
                    {
                        "id": "FieldName",
                        "name": "Field",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": [
                                "String"
                            ]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    }
                ]
            }
        }
    ],
    "contributionTypes": []
}