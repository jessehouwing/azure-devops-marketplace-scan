{
    "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
    "id": "09c107b3-9cd8-5fb6-8079-49cbf51dfd93",
    "name": "SQReport",
    "friendlyName": "SQ Report",
    "instanceNameFormat": "SQ Report",
    "description": "Create a report",
    "helpMarkDown": "",
    "category": "Utility",
    "runsOn": ["Agent", "DeploymentGroup"],
    "demands": ["docker","npm"],
    "author": "Jesus Alvarado",
    "minimumAgentVersion": "2.105.0",
    "version": {
        "Major": 1,
        "Minor": 21,
        "Patch": 27
    },
    "groups": [
        {
            "name": "sqReportConfiguration",
            "displayName": "Report Configuration",
            "isExpanded": true
        },
        {
            "name": "outputGroup",
            "displayName": "Output",
            "isExpanded": true
        }
    ],
    "inputs": [
        {
            "name": "sqHost",
            "type": "string",
            "label": "SonarQube Host",
            "defaultValue": "http://localhost",
            "required": true,
            "helpMarkDown": "The SonarQube Host",
            "groupName": "sqReportConfiguration"
        },
        {
            "name": "sqPort",
            "type": "string",
            "label": "SonarQube Port",
            "defaultValue": "9000",
            "required": true,
            "helpMarkDown": "The SonarQube port",
            "groupName": "sqReportConfiguration"
        },
        {
            "name": "sqToken",
            "type": "string",
            "label": "SonarQube Token",
            "defaultValue": "PUT-YOUR-TOKEN-HERE",
            "required": true,
            "helpMarkDown": "The SonarQube Token",
            "groupName": "sqReportConfiguration"
        },
        {
            "name": "sqKeys",
            "type": "multiLine",
            "label": "SonarQube project keys",
            "defaultValue": "com.your.project.key",
            "required": true,
            "helpMarkDown": "The SonarQube project keys",
            "groupName": "sqReportConfiguration",
            "properties":{
                "resizable": true,
                "rows": "1"
            }
        },
        {
            "name": "sqPath",
            "type": "string",
            "label": "Report Path",
            "defaultValue": "$(Build.ArtifactStagingDirectory)/.sq-report",
            "required": true,
            "helpMarkDown": "The path where the report will be stored",
            "groupName": "sqReportConfiguration"
        },
        {
            "name": "sqFileName",
            "type": "string",
            "label": "SonarQube FileName",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Output FileName",
            "groupName": "sqReportConfiguration"
        },
        {
            "name": "sqIssuer",
            "type": "string",
            "label": "SonarQube Report Issuer",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Your name or brand",
            "groupName": "sqReportConfiguration"
        }
        
    ],
    "execution": {
        "Node": {
            "target": "index.js",
            "argumentFormat": ""
        },
        "Node10": {
            "target": "index.js",
            "argumentFormat": ""
        }
    }
}